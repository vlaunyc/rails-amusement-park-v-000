<h1>Attractions</h1>

<ul>
  <% @attractions.each do |attraction| %>
    <li>
      <%= attraction.name %> (<%= attraction.tickets %> tickets)
      <% if current_user.admin %>
         <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
      <% else %>
         <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></td>
      <% end %>
    </li>
  <% end %>
</ul>

<% if current_user.admin %>
  <p><%= link_to 'New Attraction', new_attraction_path %></p>
<% end %>
